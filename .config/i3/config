# switch to workspace
bindsym $mod+1 $ws01
bindsym $mod+2 $ws02
bindsym $mod+3 $ws03
bindsym $mod+4 $ws04
bindsym $mod+5 $ws05
bindsym $mod+6 $ws06
bindsym $mod+7 $ws07
bindsym $mod+8 $ws08
bindsym $mod+9 $ws09
bindsym $mod+0 $ws10

# move focused container to workspace
